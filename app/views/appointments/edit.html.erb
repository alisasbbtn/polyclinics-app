<div class="col-md-8 offset-md-2">
  <h2 class="mb-3">
    <%= t('.header') %>
    <%= link_to @appointment.id, doctor_appointment_path(@appointment.doctor, @appointment) %>
  </h2>

  <%= form_for [@appointment.doctor, @appointment] do |f| %>
    <div class="mb-3">
      <%= f.text_area :recommendations, class: 'form-control' %>
    </div>

    <div class="actions text-center">
      <%= f.button t('.save'), class: 'btn btn-primary', type: 'submit' %>
    </div>
  <% end %>
</div>
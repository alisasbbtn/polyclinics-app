<%= content_for :title, @patient.full_name %>

<div class="row">
  <div class="col-md-4 offset-md-2">
    <%= photo_or_placeholder(@patient, 300, 300, 'img-thumbnail') %>
  </div>
  <div class="col-md-6">
    <h3><%= @patient.full_name %></h3>
    <p>
      <span class="fw-bold"><%= t('activerecord.attributes.patient.birth_date') %>:</span>
      <% if @patient.birth_date %>
        <%= l @patient.birth_date, format: :long %>
      <% else %>
        <span class="text-muted"><%= t('profile.unspecified') %></span>
      <% end %>
    </p>
    <p>
      <span class="fw-bold"><%= t('activerecord.attributes.patient.gender') %>:</span>
      <% if @patient.gender %>
        <span><%= t("gender.#{@patient.gender}") %></span>
      <% else %>
        <span class="text-muted"><%= t('profile.unspecified') %></span>
      <% end %>
    </p>

    <p>
      <span class="oi oi-phone me-2"></span> <%= number_to_phone(@patient.phone_number, country_code: 380) %>
    </p>

    <%= link_to t('profile.edit'), edit_patient_path, class: 'btn btn-primary', role: 'button' if current_patient %>
    <%= link_to t('appointments.index.all_appointments'), patient_appointments_path(@patient), class: 'btn btn-outline-primary', role: 'button' %>
  </div>
</div>